<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    
    <bean id="oferta" class="br.cic.unb.monitoria.recursos.RecursoOferta"/>
 	<bean id="aluno" class="br.cic.unb.monitoria.recursos.RecursoAluno"/>
 	<bean id="solicitacaoMonitoria" class="br.cic.unb.monitoria.recursos.RecursoSolicitacaoMonitoria"/>


	<bean id="populaDB" class="br.cic.unb.monitoria.recursos.RecursoPopulaDB"/>

 
 	<bean id="listaDeRecursos" class="br.unb.cic.spark.ListaDeRecursos">
		<property name="recursos">
			<list  >
            	<ref bean="oferta" />
            	<ref bean="aluno" />
            	<ref bean="solicitacaoMonitoria" />
            	<ref bean="populaDB" />                          
        	</list>	
        </property>
   </bean>
    
</beans>